{
  "name": "web-samples",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "copy:html": "cp -R src/index.html dist/",
    "copy:css": "cp -R src/assets/css/ dist/assets/",
    "copy:img": "cp -R src/assets/img/ dist/assets/",
    "copy:assets": "npm-run-all copy:css copy:img",
    "start:build": "npm-run-all clean build copy:html copy:assets",
    "dev": "nodemon --watch src -e ts,html,css --exec npm run start:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunotco/web-samples.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brunotco/web-samples/issues"
  },
  "homepage": "https://github.com/brunotco/web-samples#readme",
  "devDependencies": {
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.2"
  }
}
